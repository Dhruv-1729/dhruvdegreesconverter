<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EFE799"
    android:backgroundTint="#F3EEC6"
    tools:context=".MainActivity">

    <Switch
        android:id="@+id/tempswitch"
        android:layout_width="153dp"
        android:layout_height="72dp"
        android:layout_marginStart="129dp"
        android:layout_marginTop="79dp"
        android:layout_marginEnd="129dp"
        android:layout_marginBottom="580dp"
        android:fontFamily="@font/cambo"
        android:text="Type"
        android:textAlignment="center"
        android:textSize="20sp"
        android:thumbTint="#00D4A3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="UseSwitchCompatOrMaterialXml" />

    <TextView
        android:id="@+id/typeindicator"
        android:layout_width="347dp"
        android:layout_height="53dp"
        android:layout_marginStart="85dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="86dp"
        android:layout_marginBottom="13dp"
        android:fontFamily="sans-serif-medium"
        android:text="Convert to Celsius"
        android:textAlignment="center"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/tempswitch"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/inputnum"
        android:layout_width="233dp"
        android:layout_height="66dp"
        android:layout_marginStart="100dp"
        android:layout_marginTop="154dp"
        android:layout_marginEnd="101dp"
        android:layout_marginBottom="381dp"
        android:ems="10"
        android:inputType="number"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:text="Input degrees here"
        android:textAlignment="center"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.347"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tempswitch"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/outputnum"
        android:layout_width="165dp"
        android:layout_height="66dp"
        android:layout_marginStart="145dp"
        android:layout_marginTop="211dp"
        android:layout_marginEnd="145dp"
        android:layout_marginBottom="124dp"
        android:text="-----"
        android:textAlignment="center"
        android:textSize="50sp"
        android:textStyle="bold|italic"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/inputnum"
        tools:ignore="HardcodedText" />

    <Button
        android:id="@+id/convertbutton"
        android:layout_width="128dp"
        android:hapticFeedbackEnabled="true"
        android:layout_height="53dp"
        android:layout_marginStart="141dp"
        android:layout_marginTop="67dp"
        android:layout_marginEnd="142dp"
        android:layout_marginBottom="81dp"
        android:backgroundTint="#F32121"
        android:text="Convert"
        app:layout_constraintBottom_toTopOf="@+id/outputnum"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/inputnum" />

    <TextView
        android:id="@+id/forc"
        android:layout_width="74dp"
        android:layout_height="64dp"
        android:layout_marginStart="18dp"
        android:layout_marginTop="191dp"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="105dp"
        android:text="F"
        android:textAlignment="center"
        android:textSize="45sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/outputnum"
        app:layout_constraintTop_toBottomOf="@+id/inputnum"
        app:layout_constraintVertical_bias="1.0" />
</androidx.constraintlayout.widget.ConstraintLayout>